const { queryDrinkById, queryRandomDrink } = require('../models/drink_model.js');

const getDrinkById = (drinkId) => {
  return queryDrinkById(drinkId)
    .then(res => res)
    .catch(err => err);
};

const getRandomDrink = () => {
  return queryRandomDrink()
    .then(res => res)
    .catch(err => err);
};

module.exports = {
  getDrinkById,
  getRandomDrink
};